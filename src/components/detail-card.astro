---
export type Props = {
  date: string;
  heading: string;
  itemText: string;
  subHeading: string;
  link?: {
    title: string;
    href: string;
    label: string;
  };
};

const { date, heading, itemText, subHeading, link } = Astro.props;
import './detail-card.css';
---

<div class='card'>
  <div class='space'>
    <h2 aria-label={link?.label}>
      <a
        class='job-link'
        href={link?.href}
        title={link?.title}
        target='_blank'
        aria-label={link?.label}>{heading}</a
      >
    </h2>
    <span class='date'>{date}</span>
  </div>
  <h3>{subHeading}</h3>
  <div class='description'>
    <p>
      {itemText}
    </p>
  </div>
</div>

---
export type Props = {
    date: string;
    disableLinks?: boolean;
    heading: string;
    itemText?: string;
    subHeading: string;
    link?: {
        title: string;
        href: string;
        label: string;
    };
    image?: {
        src: ImageMetadata;
        alt: string;
    };
};

const { date, heading, image, itemText, subHeading, link, disableLinks } =
    Astro.props;
import { Image } from "astro:assets";
---

<div class="card">
    <div class="space">
        <h2>
            {heading}
        </h2>
        <span class="date">{date}</span>
    </div>
    <h3>
        {
            disableLinks ? (
                subHeading
            ) : (
                <a
                    class="job-link"
                    href={link?.href}
                    title={link?.title}
                    target="_blank"
                    aria-label={link?.label}
                >
                    {subHeading}
                </a>
            )
        }
    </h3>
    {
        image ? (
            <div class="image">
                <Image src={image.src} alt={image.alt} title={image.alt} />
            </div>
        ) : null
    }
    <div class="description">
        {itemText}
        <slot name="itemText" />
    </div>
</div>

<style scoped>
    span.date {
        color: var(--header-color);
        font-family: CommitMono;
        vertical-align: baseline;
        max-width: 7.5rem;
    }

    div.card {
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        justify-items: center;
        align-items: flex-start;
        border-bottom: 0.2rem dashed var(--border-color);
        padding: 1.5rem 0px;

        &:last-child {
            border: none;
        }

        ul {
            margin-left: 1rem;
        }

        .image {
            margin-top: 1rem;
            width: 100%;
            img {
                object-fit: none;
                zoom: 100%;
                width: 100%;
                max-height: 20dvh;
                border-radius: 8px;
                @media screen and (max-width: 768px) {
                    zoom: 50%;
                    max-height: 40dvh;
                }
            }
        }
    }

    div.space {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        width: 100%;
        gap: 0.5rem;
    }

    div.description {
        font-family: "IBMPlexSerif";
        font-weight: normal;
        font-size: 0.9rem;
        line-height: 2;
        height: 100%;
        width: 100%;
        max-width: 1000px;
        margin-top: 2rem;
    }

    p {
        color: var(--content-color);
        text-wrap: pretty;
        line-height: 1.4;
    }

    h3 {
        line-height: normal;
    }

    h2 {
        line-height: normal;
        max-width: 17.5rem;
    }

    a.job-link {
        color: inherit;
        text-decoration: none;

        &:hover,
        &:focus-visible,
        &:active {
            outline: none;
            color: var(--accent);
            text-decoration: underline;
        }
    }

    @media (min-width: 768px) {
        h3 {
            line-height: 0.9;
        }

        h2 {
            line-height: 1.25;
            max-width: none;
        }

        span.date {
            max-width: none;
        }
    }
</style>

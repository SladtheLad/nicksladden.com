---
import Layout from '../layouts/layout.astro';
import ResumeCv from '../components/Resume/resume-cv.astro';
---

<Layout title='Portfolio | Nick Sladden'>
  <article role='article'>
    <ResumeCv transition:animate='fade' />
  </article>
</Layout>

<style scoped>
  article {
    width: clamp(16rem, 50dvw, 60rem);
    min-height: 100dvh;
    padding-block: 2rem;
    display: grid;
    gap: 1.25rem;
    border-inline: 1px dashed var(--border-color);
    grid-template-columns: minmax(1rem, 0.5fr) repeat(12, 1fr) minmax(
        1rem,
        0.5fr
      );
    grid-template-rows: 0.5fr 100%;
    grid-column-gap: 0px;
    grid-row-gap: 2rem;
    section {
      margin-left: auto;
      margin-right: auto;
      width: 100%;
      height: 100%;
      height: fit-content;
      grid-area: 1 / 2 / 2 / 14;
    }
  }

  @media screen and (max-width: 768px) {
    article {
      width: 100%;
      padding-block-start: 6rem;
      border: none;
      padding-inline: 0.75rem;
      section {
        margin-left: auto;
        margin-right: auto;
        width: 100%;
        height: 100%;
        grid-area: 1 / 1 / 2 / 15;
      }
    }
  }
</style>

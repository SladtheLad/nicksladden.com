---
import Layout from './layout.astro';
---

<Layout title='Blog'>
  <article>
    <slot />
  </article>
</Layout>

<style scoped>
  article {
    height: 100%;
    width: clamp(16rem, 50dvw, 45rem);
    padding-block: 2rem;
    gap: 1.5rem;

    h1,
    h2,
    h3,
    h4,
    h5,
    h6,
    p {
      padding-inline-start: 1rem;
    }

    p {
      font-size: 0.9rem;
      width: 100%;
      max-inline-size: 68dvw;
      margin-block: 1rem;
    }

    h2 {
      color: var(--header-color);
      font-size: medium;
      font-weight: normal;
      margin-block: 1.5rem;
    }
    h3 {
      color: var(--header-color);
      font-size: 1.1rem;
      font-weight: normal;
      margin-block: 1.5rem;
    }
    ul {
      padding-block: 2rem;
    }

    section {
      width: 100%;
      margin-block-start: auto;
      margin-block-end: auto;
      display: flex;
      place-content: flex-start;
      place-items: flex-start;
      flex-direction: column;
    }
  }

  @media screen and (max-width: 600px) {
    article {
      width: 100%;
      padding-block-start: 6rem;
    }
  }
</style>

---
import Layout from './layout.astro';
---

<Layout title=`A Design Engineer's Blog`>
  <article>
    <slot />
  </article>
</Layout>

<style>
  article {
    height: 100%;
    width: clamp(16rem, 50dvw, 50rem);
    padding-block: 2rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    gap: 1.25rem;
    border-inline: 3px dashed var(--border-color);
    padding-inline: 2rem;

    h1,
    h2,
    h3,
    h4,
    h5,
    h6,
    p {
      padding-inline-start: 1rem;
    }

    hr {
      width: 100%;
      height: 0;
      border: none;
      border-block: 4px dashed var(--border-color);
    }
    p {
      font-size: 0.9rem;
      width: 100%;
      max-inline-size: 68dvw;
    }

    h2 {
      color: var(--header-color);
      font-size: large;
      font-weight: 700;
    }
    h3 {
      color: var(--header-color);
      font-size: 1.1rem;
      font-weight: 700;
    }
    /* ul {
      padding-block: 2rem;
    } */

    span.date {
      font-size: 0.8rem;
      color: var(--header-color);
      font-weight: 700;
      padding-inline-start: 2rem;
    }

    section {
      width: 100%;
      margin-block-end: 2rem;
      display: flex;
      place-content: flex-start;
      place-items: flex-start;
      flex-direction: column;
    }
  }

  @media screen and (max-width: 600px) {
    article {
      width: 100%;
      padding-block-start: 6rem;
      border: none;
      padding-inline: 0.75rem;

      p {
        font-size: 1rem;
        width: 100%;
        max-inline-size: 100%;
      }
    }
  }
</style>
